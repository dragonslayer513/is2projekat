<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">arnoldpass</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/avioprojekat</property>
  <property name="hibernate.connection.username">arnold</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <property name="current_session_context_class">thread</property>
  <mapping resource="dbmodel/Aerodrom.hbm.xml"/>
  <mapping resource="dbmodel/Kompanija.hbm.xml"/>
  <mapping resource="dbmodel/Korisnik.hbm.xml"/>
  <mapping resource="dbmodel/Let.hbm.xml"/>
  <mapping resource="dbmodel/Linija.hbm.xml"/>
  <mapping resource="dbmodel/Rezervacija.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
